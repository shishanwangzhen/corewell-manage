<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//www.mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.corewell.corewellmanage.dao.OutboundApplyDao">
    <resultMap id="OutboundApplyMap" type="com.corewell.corewellmanage.domain.OutboundApply">
        <id property="id" column="id"/>
     
        <result property="reviewerId" column="reviewer_id"/>
        <result property="userId" column="user_id"/>
        <result property="projectId" column="project_id"/>
        <result property="status" column="status"/>
        <result property="creatorId" column="creator_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="getOutboundApply" parameterType="OutboundApplyParam" resultType="OutboundApply">
        select id, reviewer_id as reviewerId, user_id as userId,project_id as projectId,status,
               creator_id as creatorId, create_time as createTime
        from outbound_apply
        where 1=1
        <if test="id!=null and id!=''">
            and id=#{id}
        </if>
       
    </select>

    <insert id="addOutboundApply" parameterType="OutboundApplyAddParam">
        insert into outbound_apply
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="reviewerId!=null and reviewerId!=''">
                reviewer_id,
            </if>
            <if test="userId!=null and userId!=''">
                user_id,
            </if>
            <if test="projectId!=null and projectId!=''">
                project_id,
            </if>
            <if test="status!=null and status!=''">
                status,
            </if>
            <if test="createTime!=null">
                create_time,
            </if>
            <if test="creatorId!=null and creatorId!=''">
                creator_id
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="reviewerId!=null and reviewerId!=''">
                #{reviewerId},
            </if>
            <if test="userId!=null and userId!=''">
                #{userId},
            </if>
            <if test="projectId!=null and projectId!=''">
                #{projectId},
            </if>
            <if test="status!=null and status!=''">
                #{status},
            </if>
            <if test="createTime!=null">
                #{createTime},
            </if>
            <if test="creatorId!=null and creatorId!=''">
                #{creatorId}
            </if>
        </trim>
    </insert>


    <update id="updateOutboundApply" parameterType="OutboundApplyUpdateParam">
        update outbound_apply
        <set>

            <if test="reviewerId!=null and reviewerId!=''">
                reviewer_id=#{reviewerId},
            </if>
            <if test="userId!=null and userId!=''">
                user_id =#{userId},
            </if>
            <if test="projectId!=null and projectId!=''">
                project_id =#{projectId},
            </if>
            <if test="status!=null and status!=''">
                status =#{status},
            </if>

        </set>
        where id=#{id}
    </update>

    <update id="deleteOutboundApply" parameterType="Long">
        delete
        from outbound_apply
        where id = #{id}
    </update>
</mapper>

