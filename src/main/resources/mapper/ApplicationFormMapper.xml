<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//www.mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.corewell.corewellmanage.dao.ApplicationFormDao">
    <resultMap id="ApplicationFormMap" type="com.corewell.corewellmanage.domain.ApplicationForm">
        <id property="id" column="id"/>

        <result property="number" column="number"/>
        <result property="projectId" column="project_id"/>
        <result property="warehouseId" column="warehouse_id"/>
        <result property="managerId" column="manager_id"/>
        <result property="financeId" column="finance_id"/>
        <result property="buyerId" column="buyer_id"/>
        <result property="status" column="status"/>
        <result property="notes" column="notes"/>
        <result property="creatorId" column="creator_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="getApplicationForm" parameterType="ApplicationFormParam" resultType="ApplicationFormDTO">
        select a.id as id,
        a.number as number,
        a.project_id as projectId,
        p.name as projectName,
        a.warehouse_id as warehouseId,
        w.name as warehouseName,
        a.manager_id as managerId,
        a2.name as manager,
        a.finance_id as financeId,
        a3.name as finance,
        a.buyer_id as buyerId,
        a4.name as buyer,
        a.total_amount as totalAmount ,
        a.status as status ,
        a.notes as notes,
        a.creator_id as creatorId,
        a.create_time as createTime
        from application_form a
        left join project p on a.project_id = p.id
        left join warehouse w on a.warehouse_id = w.id
        left join account a2 on a.manager_id=a2.id
        left join account a3 on a.finance_id=a3.id
        left join account a4 on a.finance_id=a4.id
        where 1=1
        <if test="id!=null and id!=''">
            and a.id=#{id}
        </if>
        <if test="number!=null and number!=''">
            and a.number=#{number}
        </if>
        <if test="projectId!=null and projectId!=''">
            and a.project_id=#{projectId}
        </if>
        <if test="warehouseId!=null and warehouseId!=''">
            and a.warehouse_id=#{warehouseId}
        </if>
        <if test="managerId!=null and managerId!=''">
            and a.manager_id=#{managerId}
        </if>
        <if test="id!=null and id!=''">
            and a.finance_id=#{financeId}
        </if>
        <if test="status!=null and status!=''">
            and a.status=#{status}
        </if>
        <if test="creatorId!=null and creatorId!=''">
            and a.creator_id=#{creatorId}
        </if>
        <!-- <if test="name!=null and name!=''">
             and name like CONCAT('%' , #{name ,jdbcType=VARCHAR},'%')
         </if>-->
    </select>

    <select id="selectApplicationForm" parameterType="ApplicationFormPageParam" resultType="ApplicationFormDTO">
        select a.id as id,
        a.number as number,
        a.project_id as projectId,
        p.name as projectName,
        a.warehouse_id as warehouseId,
        w.name as warehouseName,
        a.manager_id as managerId,
        a2.name as manager,
        a.finance_id as financeId,
        a3.name as finance,
        a.buyer_id as buyerId,
        a4.name as buyer,
        a.total_amount as totalAmount ,
        a.status as status ,
        a.notes as notes,
        a.creator_id as creatorId,
        a.create_time as createTime
        from application_form a
        left join project p on a.project_id = p.id
        left join warehouse w on a.warehouse_id = w.id
        left join account a2 on a.manager_id=a2.id
        left join account a3 on a.finance_id=a3.id
        left join account a4 on a.finance_id=a4.id
        where 1=1
        <if test="projectId!=null and projectId!=''">
            and a.project_id=#{projectId}
        </if>
        <if test="warehouseId!=null and warehouseId!=''">
            and a.warehouse_id=#{warehouseId}
        </if>
        <if test="managerId!=null and managerId!=''">
            and a.manager_id=#{managerId}
        </if>
        <if test="financeId!=null and financeId!=''">
            and a.finance_id=#{financeId}
        </if>
        <if test="status!=null and status!=''">
            and a.status=#{status}
        </if>
        <if test="creatorId!=null and creatorId!=''">
            and a.creator_id=#{creatorId}
        </if>

    </select>

    <insert id="addApplicationForm" parameterType="ApplicationFormAddParam">
        insert into application_form
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="number!=null and number!=''">
                number,
            </if>
            <if test="projectId!=null and projectId!=''">
                project_id,
            </if>
            <if test="warehouseId!=null and warehouseId!=''">
                warehouse_id,
            </if>
            <if test="managerId!=null and managerId!=''">
                manager_id,
            </if>
            <if test="financeId!=null and financeId!=''">
                finance_id,
            </if>
            <if test="buyerId!=null and buyerId!=''">
                buyer_id,
            </if>
            <if test="status!=null and status!=''">
                status,
            </if>
            <if test="notes!=null and notes!=''">
                notes,
            </if>
            <if test="createTime!=null">
                create_time,
            </if>
            <if test="creatorId!=null and creatorId!=''">
                creator_id
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="number!=null and number!=''">
                #{number},
            </if>
            <if test="projectId!=null and projectId!=''">
                #{projectId},
            </if>
            <if test="warehouseId!=null and warehouseId!=''">
                #{warehouseId},
            </if>
            <if test="managerId!=null and managerId!=''">
                #{managerId},
            </if>
            <if test="financeId!=null and financeId!=''">
                #{financeId},
            </if>
            <if test="buyerId!=null and buyerId!=''">
                #{buyerId},
            </if>
            <if test="status!=null and status!=''">
                #{status},
            </if>
            <if test="notes!=null and notes!=''">
                #{notes},
            </if>
            <if test="createTime!=null">
                #{createTime},
            </if>
            <if test="creatorId!=null and creatorId!=''">
                #{creatorId}
            </if>
        </trim>
    </insert>


    <update id="updateApplicationForm" parameterType="ApplicationFormUpdateParam">
        update application_form
        <set>
            <if test="number!=null and number!=''">
                number=#{number},
            </if>
            <if test="projectId!=null and projectId!=''">
                project_id=#{projectId},
            </if>

            <if test="warehouseId!=null and warehouseId!=''">
                warehouse_id =#{warehouseId},
            </if>
            <if test="managerId!=null and managerId!=''">
                manager_id =#{managerId},
            </if>
            <if test="financeId!=null and financeId!=''">
                finance_id =#{financeId},
            </if>
            <if test="buyerId!=null and buyerId!=''">
                buyer_id =#{buyerId},
            </if>
            <if test="notes!=null and notes!=''">
                notes =#{notes},
            </if>
            <if test="status!=null and status!=''">
                status =#{status}
            </if>

        </set>
        where id=#{id}
    </update>

    <delete id="deleteApplicationForm" parameterType="Long">
        delete
        from application_form
        where id = #{id}
    </delete>
</mapper>

