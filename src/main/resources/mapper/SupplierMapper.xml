<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//www.mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.corewell.corewellmanage.dao.SupplierDao">
    <resultMap id="SupplierMap" type="com.corewell.corewellmanage.domain.Supplier">
        <id property="id" column="id"/>

        <result property="name" column="name"/>
        <result property="material" column="material"/>
        <result property="phone" column="phone"/>
        <result property="link" column="link"/>
        <result property="level" column="level"/>
        <result property="counts" column="counts"/>
        <result property="notes" column="notes"/>
        <result property="creator_id" column="creatorId"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getSupplier" parameterType="SupplierParam" resultType="Supplier">
        select id, name, material, phone ,link, level,counts,notes,creator_id as creatorId,
               create_time as createTime, update_time as updateTime
        from supplier
        where 1=1
        <if test="id!=null and id!=''">
            and id=#{id}
        </if>
        <if test="name!=null and name!=''">
            and name like CONCAT('%' , #{name ,jdbcType=VARCHAR},'%')
        </if>
    </select>

    <insert id="addSupplier" parameterType="SupplierAddParam">
        insert into supplier
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="name!=null and name!=''">
                name,
            </if>
            <if test="material!=null and material!=''">
                material,
            </if>
            <if test="phone!=null and phone!=''">
                phone,
            </if>
            <if test="link!=null and link!=''">
                link,
            </if>
            <if test="level!=null and level!=''">
                level,
            </if>
            <if test="counts!=null and counts!=''">
                counts,
            </if>
            <if test="notes!=null and notes!=''">
                notes,
            </if>
            <if test="createTime!=null">
                create_time,
            </if>
            <if test="creatorId!=null and creatorId!=''">
                creator_id
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">

            <if test="name!=null and name!=''">
                #{name},
            </if>
            <if test="material!=null and material!=''">
                #{material},
            </if>
            <if test="phone!=null and phone!=''">
                #{phone},
            </if>
            <if test="link!=null and link!=''">
                #{link},
            </if>
            <if test="level!=null and level!=''">
                #{level},
            </if>
            <if test="counts!=null and counts!=''">
                #{counts},
            </if>
            <if test="notes!=null and notes!=''">
                #{notes},
            </if>
            <if test="createTime!=null">
                #{createTime},
            </if>
            <if test="creatorId!=null and creatorId!=''">
                #{creatorId}
            </if>
        </trim>
    </insert>


    <update id="updateSupplier" parameterType="SupplierUpdateParam">
        update supplier
        <set>

            <if test="name!=null and name!=''">
                name=#{name},
            </if>
            <if test="material!=null and material!=''">
                material=#{material},
            </if>
            <if test="phone!=null and phone!=''">
                phone =#{phone},
            </if>
            <if test="link!=null and link!=''">
                link =#{link},
            </if>
            <if test="level!=null and level!=''">
                level =#{level},
            </if>
            <if test="counts!=null and counts!=''">
                counts =#{counts},
            </if>
            <if test="notes!=null and notes!=''">
                notes =#{notes},
            </if>

        </set>
        where id=#{id}
    </update>

    <update id="deleteSupplier" parameterType="Long">
        delete
        from supplier
        where id = #{id}
    </update>
</mapper>

