<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//www.mybatis.org//DTD Mapper 3.0//EN"
        "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.corewell.corewellmanage.dao.ProjectDao">
    <resultMap id="ProjectMap" type="com.corewell.corewellmanage.domain.Project">
        <id property="id" column="id"/>
        <result property="number" column="number"/>
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="managerId" column="manager_id"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="creatorId" column="creator_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <select id="getProject" parameterType="ProjectParam" resultType="Project">
        select id, number,name, address, manager_id as managerId,start_time as startTime,
        end_time as endTime,creator_id as creatorId,create_time as createTime
        from project
        where 1=1
        <if test="id!=null and id!=''">
            and id=#{id}
        </if>
        <if test="name!=null and name!=''">
            and name like CONCAT('%' , #{name ,jdbcType=VARCHAR},'%')
        </if>
    </select>

    <select id="selectProject" parameterType="ProjectParam" resultType="ProjectDTO">
        select p.name as name,p.number as number, p.address as address, a.name as manager,p.start_time as startTime,
        p.end_time as endTime
        from project p left join account a on p.manager_id=a.id
        where 1=1
        <if test="id!=null and id!=''">
            and p.id=#{id}
        </if>
        <if test="name!=null and name!=''">
            and p.name like CONCAT('%' , #{name ,jdbcType=VARCHAR},'%')
        </if>
    </select>
    <select id="downloadProject" parameterType="ProjectParam" resultType="ProjectTemplate">
        select p.name as name,p.number as number, p.address as address, a.name as manager,p.start_time as startTime,
        p.end_time as endTime
        from project p left join account a on p.manager_id=a.id
        where 1=1
        <if test="id!=null and id!=''">
            and p.id=#{id}
        </if>
        <if test="name!=null and name!=''">
            and p.name like CONCAT('%' , #{name ,jdbcType=VARCHAR},'%')
        </if>
    </select>

    <insert id="addProject" parameterType="ProjectAddParam">
        insert into project
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="name!=null and name!=''">
                name,
            </if>
            <if test="number!=null and number!=''">
                number,
            </if>
            <if test="address!=null and address!=''">
                address,
            </if>
            <if test="managerId!=null and managerId!=''">
                manager_id,
            </if>
            <if test="startTime!=null">
                start_time,
            </if>
            <if test="endTime!=null">
                end_time,
            </if>
            <if test="creatorId!=null and creatorId!=''">
                creator_id,
            </if>
            <if test="createTime!=null">
                create_time
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">

            <if test="name!=null and name!=''">
                #{name},
            </if>
            <if test="number!=null and number!=''">
                #{number},
            </if>
            <if test="address!=null and address!=''">
                #{address},
            </if>
            <if test="managerId!=null and managerId!=''">
                #{managerId},
            </if>
            <if test="startTime!=null">
                #{startTime},
            </if>
            <if test="endTime!=null">
                #{endTime},
            </if>
            <if test="creatorId!=null and creatorId!=''">
                #{creatorId},
            </if>
            <if test="createTime!=null">
                #{createTime}
            </if>
        </trim>
    </insert>


    <update id="updateProject" parameterType="ProjectUpdateParam">
        update project
        <set>
            <if test="name!=null and name!=''">
                name = #{name},
            </if>

            <if test="number!=null and number!=''">
                number =#{number},
            </if>
            <if test="address!=null and address!=''">
                address =#{address},
            </if>
            <if test="managerId!=null and managerId!=''">
                manager_id =#{managerId},
            </if>
            <if test="startTime!=null">
                start_time =#{startTime},
            </if>
            <if test="endTime!=null">
                end_time =#{endTime}
            </if>


        </set>
        where id=#{id}
    </update>

    <update id="deleteProject" parameterType="Long">
        delete
        from project
        where id = #{id}
    </update>
</mapper>

